@model CustomerManager.Common.Models.CustomerByIdModel
@{
    ViewBag.Title = string.Format("Customer with name '{0}'", Model.ContactName);
}

<h2 class="text-center">@ViewBag.Title</h2>
<br />
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th class="text-center">
                Company Name
            </th>
            <th class="text-center">
                Contact Title
            </th>
            <th class="text-center">
                Address
            </th>
            <th class="text-center">
                City
            </th>
            <th class="text-center">
                Postal Code
            </th>
            <th class="text-center">
                Region
            </th>
            <th class="text-center">
                Country
            </th>
            <th class="text-center">
                Phone
            </th>
            <th class="text-center">
                Fax
            </th>
        </tr>
    </thead>
    <tbody class="text-center">
        <tr>
            <td>@Model.CompanyName</td>
            <td>@Model.ContactTitle</td>
            <td>@Model.Address</td>
            <td>@Model.City</td>
            <td>@Model.PostalCode</td>
            <td>@(string.IsNullOrEmpty(Model.Region) ? "No region." : Model.Region)</td>
            <td>@Model.Country</td>
            <td>@Model.Phone</td>
            <td>@(string.IsNullOrEmpty(Model.Fax) ? "No fax." : Model.Fax)</td>
        </tr>
    </tbody>
</table>
<h2 class="text-center">Orders</h2>
<table class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th class="text-center">
                Products count
            </th>
            <th class="text-center">
                Total
            </th>
            <th class="text-center">
                Is there product which isn't in production?
            </th>
            <th class="text-center">
                Is there enough units in stock?
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
            <tr class="text-center">
                <td>@item.ProductsCount</td>
                <td>@item.Total</td>
                <td>@(item.IsProductInProduction == true ? "There is product which is stopped from manufacturing." : "All products are in manufacturing.")</td>
                <td>@(item.IsThereEnoughUnitsInStock == true ? "There are enough units in stock." : "There aren't enough units in stock.")</td>
            </tr>
        }
    </tbody>
</table>
